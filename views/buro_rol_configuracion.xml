<openerp>
  <data>

    <!-- Financiera ROL configuracion -->

    <record model="ir.ui.view" id="financiera_buro_rol_conf_tree">
      <field name="name">financiera.buro.rol.configuracion.tree</field>
      <field name="model">financiera.buro.rol.configuracion</field>
      <field name="arch" type="xml">
        <tree create="false" delete="false">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="financiera_buro_rol_conf_form" model="ir.ui.view">
        <field name="name">financiera.buro.rol.configuracion.form</field>
        <field name="model">financiera.buro.rol.configuracion</field>
        <field name="arch" type="xml">
            <form string="Configuracion" create="false" delete="false">
                <header>
                  <button name="actualizar_saldo_informes" string="Actualizar saldo informes" type="object" />
                </header>
                <sheet>
                  <group>
                      <group>
                        <field name="company_id" groups="base.group_erp_manager"/>
                        <field name="name"/>
                        <field name="usuario"/>
                        <field name="password" password="True"/>
                        <field name="saldo_informes" readonly="1"/>
                      </group>
                      <group>
                        <field name="asignar_capacidad_pago_mensual"/>
                        <field name="asignar_partner_tipo_segun_perfil"/>
                        <!-- <field name="consultar_distinto_modelo"/> -->
                      </group>
                  </group>
                  <group>
                    <group>
                      <notebook>
                        <page string="Modelos Experto segun Entidad">
                          <field name="modelo_ids">
                            <tree editable="true">
                              <field name="entidad_id" required="1"/>
                              <field name="name" required="1"/>
                              <field name="active"/>
                            </tree>
                          </field>
                        </page>
                      </notebook>
                    </group>
                    <group>
                      <notebook>
                        <page string="Asignacion de CPM segun Perfil">
                          <field name="perfil_to_cpm_ids">
                            <tree editable="true">
                              <field name="perfil" required="1"/>
                              <field name="capacidad_pago_mensual" required="1"/>
                              <field name="partner_tipo_id" options="{'no_quick_create':True,'no_create_edit':True, 'no_open':True}"/>
                            </tree>
                          </field>
                        </page>
                      </notebook>
                    </group>
                  </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financiera_buro_rol_action">
      <field name="name">Configuracion</field>
      <field name="res_model">financiera.buro.rol.configuracion</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="financiera_buro_rol_conf_tree"/>
    </record>


    <!-- Top menu item -->
    
    <menuitem name="Buro ROL" id="menu_rol" web_icon="financiera_buro_rol_base,static/description/icon.png" groups="financiera_buro_rol_base.manager"/>
    
    <!-- menu categories -->
    
    <menuitem name="Configuracion" id="menu_config" sequence="20" parent="menu_rol"/>

    <menuitem name="Configuracion" id="menu_rol_config_action" sequence="1" parent="menu_config" action="financiera_buro_rol_action"/>




  </data>
</openerp>